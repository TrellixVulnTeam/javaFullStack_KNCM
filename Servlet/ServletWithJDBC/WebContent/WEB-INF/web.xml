<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
 
 <servlet>
 	<servlet-name>AddEmployee</servlet-name>
 	<servlet-class>com.md.AddEmployee</servlet-class>
 </servlet>
 
 <servlet>
 	<servlet-name>UpdateEmployee</servlet-name>
 	<servlet-class>com.md.UpdateEmployee</servlet-class>
 </servlet>
 
 <servlet>
 	<servlet-name>DeleteEmployee</servlet-name>
 	<servlet-class>com.md.DeleteEmployee</servlet-class>
 </servlet>
 
 <servlet-mapping>
 
 	<servlet-name>AddEmployee</servlet-name>
 	<url-pattern>/AddEmployee</url-pattern>
 </servlet-mapping>
 
 <servlet-mapping>
 
 	<servlet-name>UpdateEmployee</servlet-name>
 	<url-pattern>/UpdateEmployee</url-pattern>
 </servlet-mapping>
 
 <servlet-mapping>
 
 	<servlet-name>DeleteEmployee</servlet-name>
 	<url-pattern>/DeleteEmployee</url-pattern>
 </servlet-mapping>
 
</web-app>